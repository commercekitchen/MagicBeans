var Bean = (function($){
	return {
		_config: {},
		_init: false,
		_data: {},

		start: function(config){
			if(typeof config == 'object') this._config = config;
			if(typeof config == 'string') try { this._config = $.parseJSON(config) } catch(e){ console.warn('Invalid MagicBeans JSON Config: ', config); }

			var all = new Bean.Observer('all');
			all.start();

			var obs = new Bean.Observer(Bean.getPageName());
			obs.start();
		},

		is: function(type){
			return $('body').hasClass(type.toLowerCase());
		},

		debugging: function(){
			return Bean.Config.get('debug') == true;
		},

		getPageName: function(){
			var id = $('body').attr('id');
			var pieces = id.split('-');
			for(var i=1; i<pieces.length; i++){
				pieces[i] = pieces[i].toLowerCase().replace(/\b[a-z]/g, function(letter){
					return letter.toUpperCase();
				});
			}
			return pieces.join('');
		},

		setData: function(key, value){
			Bean._data[key] = value;
			return this;
		},

		getData: function(key){
			return Bean._data[key];
		},

		undo: function(form){
			form.submit();
		},

		debug: function(){
			var match,
				method = 'log',
				i = 0,
				args = Array.prototype.slice.call(arguments),
				index = $.inArray(args[args.length-1], ['info', 'warn', 'error', 'log', 'debug']);

			if(index !== -1) method = args.pop();

			if(typeof args[args.length-1] != 'function') args[0] = '[MagicBeans] ' + args[0];

			// Only output if we're in debug mode
			if(Bean.debugging()){
				if(typeof args[args.length-1] == 'function'){
					var callback = args.pop();
					console.groupCollapsed.apply(console, args);
					callback();
					console.groupEnd();
				}else{
					console[method].apply(console, args);
				}
			}
		},

		Config: {
			set: function(config){
				Bean._config = config;
				return this;
			},

			get: function(key, def){
				if(!def) def = false;
				if(Bean._config[key] !== undefined){
					return Bean._config[key];
				}
				return def;
			}
		},

		Listener: {
			init: function(){
				var args = Array.prototype.slice.call(arguments);
				args.flatten().each(function(package){
					package = package.substr(0, 1).toUpperCase() + package.substr(1).toLowerCase();
					if(Listeners[package]){
						Listeners[package].run();
						Bean.debug('Initialized Package: Listeners.%s', package, 'info');
					}else{
						Bean.debug('Unable to Locate Package: Listeners.%s', package, 'warn');
					}
				});
			}
		},

		Observer: function(page){
			var obs = this;
			obs.started = false;

			if(typeof Listeners[page] == 'string'){
				var copy = Listeners[page];
				Listeners[page] = Listeners[copy];
			}

			this.start = function(){
				if(Listeners[page] && !obs.started){
					if(Listeners[page]['once']) Listeners[page]['once'](obs);
					if(Listeners[page]['always']) Listeners[page]['always'](obs);
					obs.started = true;
				}
			}

			this.reboot = function(){
				if(Listeners[page]){
					if(Listeners[page]['always']) Listeners[page]['always'](obs);
				}
			}
		},

		Form: function(form_name, action, method, callback){
			var self = this;
			var _fields = [];
			var _built = false;

			this.addField = function(type, name, value, container, class_names, placeholder){
				if(container !== false) container = true;
				if(class_names == undefined) class_names = '';
				if(placeholder == undefined) placeholder = '';
				switch(type){
					case 'hidden' :
						_fields.push({ html: '<input type="hidden" name="' + name + '" id="' + self.getId(name) + '" value="' + value + '" class="' + class_names + '" />', container: container });
						break;
					case 'text' :
						_fields.push({ html: '<input type="text" name="' + name + '" id="' + self.getId(name) + '" value="' + value + '" class="' + class_names + '" placeholder="' + placeholder + '" />', container: container });
						break;
					case 'textarea' :
						_fields.push({ html: '<textarea name="' + name + '" id="' + self.getId(name) + '" class="' + class_names + '" placeholder="' + placeholder + '">' + value + '</textarea>', container: container });
						break;
					case 'select' :
						var select = '<select name="' + name + '" id="' + self.getId(name) + '" class="' + class_names + '">';
						for(var i=0; i<select.length; i++){
							select += '<option value="' + select[i].value + '"' + (select[i].selected ? ' selected="selected"' : '') + '>' + select[i].label + '</option>';
						}
						select += '</select>';
						_fields.push({ html: select, container: container });
						break;
				}
				return this;
			};

			this.addHtml = function(html){
				_fields.push({ html: html, container: false });
				return this;
			};

			this.getId = function(name){
				var id = name.replace(/[^A-Z0-9]/gi, ' ');
				id = id.replace(/[ ]{1,}/, ' ');
				return $.trim(id).replace(' ', '_');
			};

			this.getFormId = function(){
				return form_name;
			};

			this.getClassName = function(){
				return form_name.replace(/_[0-9]+$/, '').replace('_', '-');
			};

			this.getForm = function(no_btn){
				if(!_built) self.buildForm(no_btn);
				return _html;
			};

			this.buildForm = function(no_btn){
				_html.append('<input name="utf8" type="hidden" value="âœ“">');
				if(['patch', 'put'].indexOf(method) != -1) _html.append('<input type="hidden" name="_method" value="' + method + '">');
				_html.append('<input type="hidden" name="authenticity_token" value="' + AUTH_TOKEN + '">');
				for(var i=0; i<_fields.length; i++){
					var field = _fields[i];
					if(field.container){
						_html.append($('<div class="input"></div>').append(field.html));
					}else{
						_html.append(field.html);
					}
				}
				if(!no_btn) _html.append('<input type="submit" name="commit" value="Save" class="button btn-small with-top-gap f-right" />');
				_built = true;
				return this;
			};

			var _html = $('<form class="' + self.getClassName() + '" id="' + self.getFormId() + '" action="' + action + '" accept-charset="UTF-8" method="' + (['patch', 'put'].indexOf(method) != -1 ? 'post' : method) + '" data-remote="true" data-callback="' + (callback != undefined ? callback : '') + '"></form>');

			return this;
		},

		Toast: function(message, exposure, undo){
			if(isNaN(exposure)) exposure = 4000;
			if(undo == undefined && typeof exposure == 'function') undo = exposure;
			clearTimeout(this._timer);
			$('.toast').remove();
			var toast = $('<div class="toast"></div>').append(message).hide();
			if(typeof undo == 'function') toast.append($('<a href="javascript:void(0);" class="toast-undo">Undo</a>').click(undo));
			$('body').append(toast);
			toast.fadeIn(400).css('margin-left', -(toast.outerWidth()/2)).click(function(){
				$(this).fadeOut(300, function(){
					$(this).remove();
				});
			});
			this._timer = setTimeout(function(){
				toast.fadeOut(300, function(){
					$(this).remove();
				});
			}, exposure);
		},

		Loader: function(){
			var loaded = 0;

			this.preload = function(images){
				var dfr = $.Deferred();

				if(images.length == 0) return dfr.resolve().promise();

				images.each(function(){
					var img = new Image();
					$(img).css('display', 'none');
					document.body.appendChild(img);
					$(img).on('load', function(){
						if(images.length == ++loaded){
							dfr.resolve();
						}
						$(img).remove();
					});
					img.src = $(this).attr('src');
					$(this).attr('style', function(i, style){
						return style.replace(/display[^;]+;?/g, '');
					});
				});
				return dfr.promise();
			}
		},

		Dialog: function(title, body, footer){
			var self = this;
			this._theme = null;
			this._dialog = null;
			this._overlay = null;
			this._openCallback = [];
			this._closeCallback = [];
			this._beforeCloseCallback = [];
			this._resizeTimer = null;

			this.show = function(overlay_close, button_close, width, height){
				// Render and display the dialog, centered, and remove any existing errors
				self.render(overlay_close, button_close, width, height).center().clearErrors();
				var loader = new Bean.Loader();
				var dfr = $.Deferred();

				// Make the background blurry, purely visual
				$('body').children(':visible').not(self._overlay).addClass('blurry');

				$(window).on('resize', function(){
					// Wait until resize is finished, aka 200 ms after last resize event dispatched
					clearTimeout(self._resizeTimer);
					self._resizeTimer = setTimeout(function(){
						self.center(true);
					}, 200);
				});

				// Preloads any images in the dialog, and upon loading everything, re-center the dialog as it's size may have changed
				loader.preload(self._dialog.find('img')).done(function(){
					self.center(true);
					dfr.resolve();
				});
				return dfr.promise();
			};

			this.render = function(overlay_close, button_close, width, height){
				$('body').css('overflow', 'hidden');
				self.overlay().build(button_close);
				if(width !== undefined) self._dialog.width(width);
				if(height !== undefined) self._dialog.height(height);
				this._dialog.data('dialog', self);
				this._dialog.fadeIn(200);
				this._overlay.fadeIn(200);
				this.center();

				// Dispatch any callback events when opened
				$.each(self._openCallback, function(index, callback){
					callback(self);
				});

				self._dialog.find('button.close').click(self.hide);

				if(overlay_close){
					this._overlay.addClass('clickable').click(function(event){
						if($(event.target).attr('id') == 'overlay') self.hide();
					});
				}else{
					this._overlay.removeClass('clickable').unbind('click');
				}
				return this;
			};

			this.hide = function(event){
				// If there is an error, and it's not set to ignore, don't close the dialog and exit immediately
				if(self._dialog.find('.dialog-error:not(.ignore)').length){
					self._dialog.removeClass('shake');
					self._dialog.get(0).offsetWidth = self._dialog.get(0).offsetWidth;
					self._dialog.addClass('shake');
					return;
				}

				// Remove the overflow hidden style on the body tag
				$('body').attr('style', function(i, style){
					return style.replace(/overflow[^;]+;?/g, '');
				});

				// Dispatch any callbacks attached to the before close event
				$.each(self._beforeCloseCallback, function(index, callback){
					callback(self);
				});

				// Hide the dialog and overlay
				self._overlay.fadeOut(200);

				// Dispatch any callbacks attached to the close event
				$.each(self._closeCallback, function(index, callback){
					callback(self);
				});

				$('body').children(':visible').not(self._overlay).removeClass('blurry');
			};

			this.build = function(button_close){
				// If any other dialogs are visible, remove them
				if($('#dialog').length) $('#dialog').remove();

				if(title instanceof jQuery){
					self._dialog = title;
				}else{
					var html = '<div id="dialog" class="dialog' + (self._theme ? ' dialog-' + self._theme : '') + '">';
					html += '<header class="dialog-header"><h4 class="heading">' + title + '</h4>';

					// If close button is not disabled, add it
					if(button_close !== false) html += '<button class="close icon-close"></button>';
					html += '</header>';

					// Add the dialog body content
					html += '<div class="dialog-body">' + body + '</div>';

					// If footer content was provided and is not blank, add the footer
					if(typeof footer == 'string' && $.trim(footer) != '') html += '<div class="dialog-footer">' + footer + '</div>';
					html += '</div>';

					// Add the dialog content to the overlay container
					self._overlay.html(html);
					self._dialog = $('#dialog');
				}
				self._dialog.data('dialog', this);
				return this;
			};

			this.center = function(animate){
				var windowW = $(window).width();
				var windowH = $(window).height();
				var dialogW = self._dialog.outerWidth(true);
				var dialogH = self._dialog.outerHeight(true);

				var top = (windowH/2)-(dialogH/2);
				var left = (windowW/2)-(dialogW/2);

				if(top < 0) top = 0;

				if(animate){
					self._dialog.animate({ top: top, left: left, marginLeft: 0 }, 200);
				}else{
					self._dialog.css({ top: top, left: left, marginLeft: 0 });
				}
				return this;
			};

			this.resize = function(){
				var paddingH = self._dialog.find('.dialog-body').innerWidth() - self._dialog.find('.dialog-body').width();
				var paddingV = self._dialog.find('.dialog-body').innerHeight() - self._dialog.find('.dialog-body').height();
				self._dialog.width(self._dialog.find('.dialog-body').outerWidth(true) + paddingH);
				self._dialog.height(self._dialog.find('.dialog-body').outerWidth(true) + paddingV);
			};

			this.overlay = function(){
				if(!$('#overlay').length) $('body').append('<div id="overlay"></div>');
				self._overlay = $('#overlay');
				return this;
			};

			this.setTheme = function(theme){
				self._theme = theme;
				return this;
			};

			this.onBeforeClose = function(callback){
				self._beforeCloseCallback.push(callback);
				return this;
			};

			this.onClose = function(callback){
				self._closeCallback.push(callback);
				return this;
			};

			this.onOpen = function(callback){
				self._openCallback.push(callback);
				return this;
			};

			this.addClassName = function(class_name){
				self._dialog.addClass(class_name);
				return this;
			};

			this.addError = function(message, ignore){
				var errorId = Bean.Abstract.getId();
				self._dialog.addClass('dialog-important');
				if(!self._dialog.find('.dialog-errors').length) self._dialog.find('.dialog-body').prepend('<div class="dialog-errors"></div>');

				// Get contents of current errors
				var currentErrors = $.map(self._dialog.find('.dialog-error'), function(error){
					return $(error).html();
				});

				// If error message provided does not already exist, add it
				if(currentErrors.indexOf(message) == -1){
					self._dialog.find('.dialog-errors').append('<div id="error-' + errorId + '" class="dialog-error ' + (ignore ? 'ignore' : '') + '">' + message + '</div>');
					self._dialog.find('.dialog-error').last().hide().slideDown(200, function(){
						self.center(true);
					});
				}
				return errorId;
			};

			this.removeError = function(id){
				if(self._dialog.find('#error-' + id).length){
					self._dialog.find('#error-' + id).slideUp(200, function(){
						// Remove the error container
						$(this).remove();

						// If no more errors, remove the important class from the dialog
						if(self._dialog.find('.dialog-error').length == 0) self._dialog.removeClass('dialog-important');

						// Re-center the dialog as it's height changed
						self.center(true);
					});
				}
				return this;
			};

			this.clearErrors = function(){
				self._dialog.removeClass('dialog-important');
				self._dialog.find('.dialog-error').slideUp(200, function(){
					$(this).remove();
				});
				return this;
			};

			this.getHtml = function(){
				return self._dialog;
			};
		},

